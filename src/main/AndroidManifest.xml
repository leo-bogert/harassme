<manifest
   package="net.rfc1149.harassme"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:installLocation="internalOnly"
>

  <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="14"/>

  <!-- Clipart comes from http://www.freeclipartnow.com/electronics-technology/phones/telephone-cartoon.jpg.html -->
  <application android:icon="@drawable/app_icon" android:label="@string/app_name"
               android:backupAgent="net.rfc1149.harassme.backup.HarassMeBackupAgent">

    <activity android:label="@string/app_name" android:name="net.rfc1149.harassme.prefs.PrefsActivity">
      <intent-filter>
	<action android:name="android.intent.action.MAIN"></action>
	<category android:name="android.intent.category.LAUNCHER"></category>
      </intent-filter>
    </activity>

    <service android:name="net.rfc1149.harassme.service.HarassMeService"/>

    <receiver android:name="net.rfc1149.harassme.starter.AutoStarter">
      <intent-filter>
	<action android:name="android.intent.action.BOOT_COMPLETED"/>
      </intent-filter>
    </receiver>

    <meta-data android:name="com.google.android.backup.api_key"
	       android:value="AEdPqrEAAAAI6cPv4jnLQ0Fr6vhzXr-qmvjMJR78KPzhUS9kNg" />

  </application>

  <supports-screens
     android:largeScreens="true"
     android:normalScreens="true"
     android:smallScreens="true"
     android:anyDensity="true" />

  <uses-feature android:name="android.hardware.telephony"/>

  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
</manifest>
